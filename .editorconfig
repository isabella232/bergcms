# EditorConfig, see http://EditorConfig.org for a description

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file, 4 space indentation
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[package.json]
indent_size = 2

# Markdown: Line breaks are indicated with a trailing space.
[*.{md,markdown}]
trim_trailing_whitespace = false
